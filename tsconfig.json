{
  "exclude": [
    "workspaces/homepage/public/**",
    "workspaces/gatsby-theme-confluenza/public/**",
    "workspaces/gatsby-theme-confluenza/remark-headings-plugin.js",
    "workspaces/design-assets/**",
    "workspaces/demo-component-navigator/build/**",
    "**/node_modules/**",
    "**/lib/**",
    "**/es/**"
  ],
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noEmit": true
  }
}

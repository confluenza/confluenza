    "eslint": "^6.1.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "gzip-size": "^5.1.1",
    "jest": "^24.8.0",
    "jest-emotion": "^10.0.14",
    "lerna": "^3.16.4",
    "pretty-bytes": "^5.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rollup": "^1.19.4",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",

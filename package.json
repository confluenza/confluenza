{
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/eslint-plugin": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gatsby": "^2.27.0",
    "gzip-size": "^6.0.0",
    "jest": "^26.6.3",
    "jest-emotion": "^11.0.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "pretty-bytes": "^5.4.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "standard": "^16.0.3"
  },
  "workspaces": {
    "packages": [
      "workspaces/*"
    ]
  },
  "scripts": {
    "test": "yarn lint && yarn jest --passWithNoTests",
    "test:watch": "yarn jest --watch",
    "lint": "yarn standard",
    "lint:fix": "yarn standard --fix --verbose",
    "build": "yarn lerna run build --scope @confluenza/** --ignore @confluenza/gatsby-theme-confluenza",
    "deploy": "yarn lerna run build --ignore homepage && yarn lerna run build --scope homepage"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "workspaces/homepage/public/**",
      "workspaces/gatsby-theme-confluenza/public/**",
      "workspaces/design-assets/**",
      "workspaces/demo-component-navigator/build/**",
      "**/node_modules/**",
      "**/lib/**",
      "**/es/**",
      "**/iife/**"
    ],
    "envs": [
      "es6",
      "browser",
      "jest"
    ]
  }
}

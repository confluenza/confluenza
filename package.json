  "workspaces": {
    "packages": [
      "workspaces/*"
    ]
  },
  "scripts": {
    "test": "yarn lint && yarn jest",
    "test:watch": "yarn jest --watch",
    "lint": "yarn standard",
    "lint-fix": "yarn standard --fix --verbose",
    "build": "yarn lerna run build --scope @confluenza/**",
    "deploy": "yarn lerna run build --ignore homepage && yarn lerna run build --scope homepage"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "workspaces/homepage/public/**",
      "workspaces/design-assets/**",
      "**/node_modules/**",
      "**/lib/**",
      "**/es/**",
      "**/iife/**"
    ],
    "envs": [
      "es6",
      "browser",
      "jest"
    ]
